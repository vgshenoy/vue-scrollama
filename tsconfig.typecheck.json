{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["node", "vite/client"],
    "strict": false
  },
  "include": [
    "src/**/*.js",
    "src/**/*.vue",
    "test/**/*.js",
    "vite.config.mjs",
    "vite.wrapper.config.mjs"
  ],
  "exclude": ["node_modules", "dist"]
}
