{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["node"],
    "strict": false
  },
  "include": ["src/**/*.js", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
