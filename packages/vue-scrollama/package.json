{
  "name": "vue-scrollama",
  "version": "3.0.1",
  "description": "Easy scroll-driven interactions (scrollytelling) for Vue 3, powered by Scrollama",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shenoy/vue-scrollama.git"
  },
  "keywords": [
    "vue",
    "vue3",
    "scrollama",
    "scroll",
    "scroll-driven",
    "scrollytelling",
    "scroller"
  ],
  "author": "Vignesh Shenoy <vignesh.shenoy@gmail.com>",
  "bugs": {
    "url": "https://github.com/shenoy/vue-scrollama/issues"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.18.1",
  "scripts": {
    "build": "vite build && pnpm run build:types",
    "build:types": "vue-tsc --project tsconfig.build.json",
    "test": "vitest run",
    "lint": "eslint \"src/**/*.{js,vue}\" \"test/**/*.js\"",
    "typecheck": "vue-tsc --noEmit --project tsconfig.typecheck.json",
    "prepublishOnly": "pnpm -w run sync:readme && pnpm -w run sync:readme:check && pnpm run typecheck && pnpm run test && pnpm run build"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/vue-scrollama.mjs",
  "module": "./dist/vue-scrollama.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/vue-scrollama.mjs",
      "default": "./dist/vue-scrollama.mjs"
    }
  },
  "engines": {
    "node": ">=20"
  },
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "dependencies": {
    "scrollama": "~3.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.33",
    "@typescript-eslint/parser": "^8.56.1",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vue/compiler-sfc": "^3.5.28",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^9.33.0",
    "jsdom": "^28.1.0",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vitest": "^4.0.18",
    "vue": "^3.5.28",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^3.2.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
