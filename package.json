{
  "name": "vue-scrollama-workspace",
  "private": true,
  "packageManager": "pnpm@10.18.1",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "sync:readme": "node scripts/sync-readme.mjs",
    "sync:readme:check": "node scripts/sync-readme.mjs --check",
    "build": "pnpm run sync:readme:check && pnpm --filter vue-scrollama run build",
    "build:all": "pnpm -r run build",
    "test": "pnpm --filter vue-scrollama run test",
    "lint": "pnpm --filter vue-scrollama run lint",
    "typecheck": "pnpm --filter vue-scrollama run typecheck",
    "dev:demo": "pnpm --filter vue-scrollama-demo run dev",
    "build:demo": "pnpm --filter vue-scrollama-demo run build"
  },
  "pnpm": {
    "overrides": {
      "editorconfig>minimatch": "9.0.8",
      "minimatch@>=10.0.0": ">=10.2.3"
    }
  }
}
